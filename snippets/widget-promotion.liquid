<div class="sidebarBlock">
    {% if block.settings.title != blank %}
    <h3 class="sidebarBlock__heading">{{ block.settings.title }}</h3>
    {% endif %}
    <div class="sidebarBlock__content">
        {% if block.settings.collection_id == 'show_all' %}
            <ul class="collection-accordion">
                {% for collection_list in collections limit: 15 %}
                    <li class="accordion-list__item">
                        <a class="accordion-list__action accordion-list__action--end" href="{{ collection_list.url }}" aria-label="link">{{ collection_list.title }}</a>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            {% assign promo_list = block.settings.link_list | handleize %}
            <ul class="promo-list">
                {% for link in linklists[promo_list].links %}
                    <li class="promo-list__item level-1">
                        {% if linklists[link.handle] == empty %}
                            <a class="promo-list__action promo-list__action--end" href="{{ link.url }}" aria-label="link">{{ link.title }}</a>
                        {% else %}
                            <h2 class="promo-list__action--wrapper">
                                {{ link.title }}
